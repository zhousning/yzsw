.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @engine, :url => "/engines/#{@engine.id ? idencode(@engine.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @engine.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@engine.errors.count, "错误")}:"
            %ul
              - @engine.errors.full_messages.each do |msg|
                %li= msg
        .row
          .col-md-8.offset-md-2.p-5.border
            #flash_explanation
            .card.border-0.mb-3.rounded-0
              .card-body
                %table.w-100.table-bordered.day-pdt-table
                  %tbody
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.engines.template, :class => "text-center"
                      %td.p-2.text-center
                        = f.select :template, options_for_template, {:include_blank=>false}, {:class=>"form-control"}
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.engines.consult, :class => "text-center"
                      %td.p-2.text-center
                        .form-check.form-check-inline
                          = f.radio_button :consult, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                          = f.label Setting.systems.status_yes, :class => "form-check-label"
                        .form-check.form-check-inline
                          = f.radio_button :consult, Setting.systems.status_en_no, :class => "form-check-input"
                          = f.label Setting.systems.status_no, :class => "form-check-label"
                      
                    
                    
                    -#
                      %td.p-2.text-center
                        = f.label Setting.engines.point, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :point, :class => "form-control" 
                      
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.engines.des1, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :des1, :class => "form-control" 
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.engines.des2, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :des2, :class => "form-control" 
                      
                    
                    
                    -#
                      %td.p-2.text-center
                        = f.label Setting.engines.des3, :class => "text-center"
                      %td.p-2.text-center
                        .form-check.form-check-inline
                          = f.radio_button :des3, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                          = f.label Setting.systems.status_yes, :class => "form-check-label"
                        .form-check.form-check-inline
                          = f.radio_button :des3, Setting.systems.status_en_no, :class => "form-check-input"
                          = f.label Setting.systems.status_no, :class => "form-check-label"
                      
                    
          
            .form-group.row
              = f.label "企业logo", :class => "col-2 col-form-label text-right"
              .col-10
                %label.newbutton
                  = image_tag f.one_image("logo"), :class => "blah"
                  = f.file_field :logo, :accept => "image/png, image/jpeg, image/gif", :class => "select-file", :onchange => "readURL(this);"
          
          
          
          
          
            .form-group.row
              .col-3.offset-3
                = f.submit '保存', :class => "button  button-small button-action"
            -#
              .col-3.offset-1
                = link_to '返回', engines_path, :class => "button button-small  button-caution"
