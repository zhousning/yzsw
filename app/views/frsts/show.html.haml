- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/#{controller_name}", :class => "button button-small  pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-sm-12
              %h2.text-center
                = image_tag "gykg.jpg"
            .col-md-8.offset-2.p-5.border
              .card.border-0.mb-3.rounded-0
                .card-header.bg-transparent.border-dark
                  %h5
                    = Setting.frsts.label
                .card-body
                  %table.table-bordered.day-pdt-table.w-100.mb-3
                    %tbody
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.frsts.name
                        %td.p-2.text-center
                          = @frst.name
                    
                      
                        %td.p-2.text-center
                          = Setting.frsts.sequence
                        %td.p-2.text-center
                          = @frst.sequence
                    
                      
                        %td.p-2.text-center
                          = Setting.frsts.index_page
                        %td.p-2.text-center
                          = @frst.index_page
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.frsts.show_page
                        %td.p-2.text-center
                          = @frst.show_page
                    
              .row
              
                .col-md-6
                  = image_tag @frst.sidebar_url, :class => "w-100"
              
                .col-md-6
                  = image_tag @frst.header_url, :class => "w-100"
              
              .row
              
              .row
              
              
              
                .col-md-12
                  .card.border-0.mb-3.rounded-0
                    .card-header.bg-transparent.border-info
                      %h5
                        = Setting.secds.label
                    .card-body
                      %table.table-bordered.day-pdt-table.w-100
                        %tbody
                          - @frst.secds.each do |secd|
                             
                            %tr
                              %td.p-3.text-center
                                = Setting.secds.name
                              %td.p-3.text-center
                                = secd.name
                             
                            
                              %td.p-3.text-center
                                = Setting.secds.sequence
                              %td.p-3.text-center
                                = secd.sequence
                             
                            
                              %td.p-3.text-center
                                = Setting.secds.index_page
                              %td.p-3.text-center
                                = secd.index_page
                             
                            %tr
                              %td.p-3.text-center
                                = Setting.secds.show_page
                              %td.p-3.text-center
                                = secd.show_page
                            
              
      = render "layouts/bootstrap/card"
